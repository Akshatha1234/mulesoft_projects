/getemployees:
  get:
    responses: 
      200:
        body: 
          application/json:
            example: 
              [ {"ID": 1,"age":20,"name":"akshatha",
                "salary":20000}, {"ID": 2,"age":25,"name":"akitha",
                "salary":20000}]
    
      
            

/employee:
  post:
    body: 
        application/json:
            example: |
              {
                  "ID": 1,"age":20,"name":"akshatha",
                "salary":20000
              }

    responses: 
      200:
        body: 
          application/json:
           example: |
            {"message":"Flight added (but not really)"} 
  
